{% extends "layout.html.twig" %}
{% block page_title %}
    Les articles
{% endblock %}
{% block content %}
    <div class="hero-area height-400 bg-img background-overlay" style="background-image: url({{ asset('images/bg4.jpg') }});"></div>
    <div class="main-content-wrapper section-padding-25">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-8">
                    <div class="post-content-area mb-100">
                        <div class="world-catagory-area">
                            <h3>Les Articles</h3>
                        </div>
                        <!-- Catagory Area -->
                        <div class="world-catagory-area">
                            <div class="tab-content" id="myTabContent">
                            {% if article is not empty %}
                                <div class="tab-pane fade show active" id="world-tab-1" role="tabpanel" aria-labelledby="tab1">

                                    {% for articles in article %}
                                        <!-- Single Blog Post -->
                                        <div class="single-blog-post post-style-4 d-flex align-items-center">
                                            <!-- Post Thumbnail -->
                                            {% if articles.featuredImage is not null  %}
                                                <div class="post-thumbnail">
                                                    <img class="image-evenement-categorie" src="{{ asset('images/product/'~articles.featuredImage) }}" alt="">
                                                </div>
                                            {% else %}
                                                <div class="post-thumbnail">
                                                    <img class="image-evenement-categorie" src="{{ asset('images/product/')}}image-defaut.jpg" alt="Aucune image">
                                                </div>
                                            {% endif %}
                                            <!-- Post Content -->
                                            <div class="post-content">
                                                <a href="{{ path('front_article',{'slug': articles.slug, 'id': articles.id}) }}" class="headline">
                                                    <h5>{{ articles.titre }}</h5>
                                                </a>
                                                <p>{{ articles.contenu | summary }}</p>
                                                <!-- Post Meta -->
                                                <div class="post-meta">
                                                    <p><a href="#" class="post-author">
                                                            {{articles.membre.prenom ~' '~articles.membre.nom}}
                                                        </a>
                                                        on
                                                        <a href="#" class="post-date">
                                                            {{ articles.dateCreation | date('d/m/Y') }}
                                                        </a>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                            {% else %}

                                        <div class="alert alert-danger">
                                            <strong>
                                                Aucun article pour le moment
                                            </strong>
                                        </div>

                            {% endif %}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- ZONE SIDEBAR -->
                {{ render(controller('App\\Controller\\FrontController::sidebar')) }}
            </div>
        </div>
    </div>
{% endblock %}